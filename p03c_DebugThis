/* Button Counter */
/* This program counts the number of times the user presses the touch sensor */
/* User should only press sensor when screen says "READY" each time. */
/* After 5 seconds without a button press, display counter value */


/* Global Variables */
int Counter = 0;


/* Function to count presses and return counter value */
void GetFirstNum ()
{

	/* Display text for user */
	nxtDisplayTextLine(1, "Tap touch sensor");
	nxtDisplayTextLine(2, "only when you see");
	nxtDisplayTextLine(3, "the word...");
	wait1Msec(4000);
  nxtDisplayTextLine(4, "READY");

  /* Count presses of the touch sensor - If not pressed for 5 seconds, you're done */
     clearTimer(T1);
  while(time1[T1] < 5000)
   {
     if (SensorValue(Button) == 1)
     	{
	     clearTimer(T1);
	     /* Clear READY */
	     nxtDisplayTextLine(4, "......");
	     /* Display READY */
	     nxtDisplayTextLine(4, "READY");
	     Counter = Counter + 1;
	     wait1Msec(1000);
	    
	   }
   }
}

task main()
{
   GetFirstNum();
   nxtDisplayTextLine(4, "Counter = ...");
   /* Dramatic Pause */
   wait1Msec(2000);
   /* Display Counter Result */
   nxtDisplayTextLine(4, "Counter = %i", Counter);
   /* Allow time for user to see result */
   wait1Msec(8000);

}
