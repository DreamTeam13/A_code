#pragma config(Motor,  motorA,          a,             tmotorNXT, PIDControl, encoder)
#pragma config(Motor,  motorB,          b,             tmotorNXT, PIDControl, encoder)
#pragma config(Motor,  motorC,          c,             tmotorNXT, PIDControl, encoder)
#pragma DebuggerWindows("joystickSimple")
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

#include "JoystickDriver.c"

task main()
{
  while(1 == 1) //Repeat code forever
  {
    getJoystickSettings(joystick);

  	if (joystick.joy1_y1 < 20 && joystick.joy1_y1 > -20) //When the left thumbstick is near the middle, stop motor C.
  	{
			motor[motorC]= 0;
  	}
  	else //Else, make motor C's speed equal the y coordinate of the left thumbstick.
  	{
  		motor[motorC] = joystick.joy1_y1;
  	}
  	if (joystick.joy1_y2 < 20 && joystick.joy1_y2 > -20) //When the right thumbstick is near the middle, stop motor B.
 	 	{
			motor[motorB]= 0;
  	}
  	else //Else, make motor B's speed equal the y coordinate of the right thumbstick.
  	{
  		motor[motorB] = joystick.joy1_y2;
  	}


  if(joy1Btn(5) == 1) //When the right bumper is pushed, move motor A forward
 {
 motor(motorA) = 100;
 }
 else if(joy1Btn(6) == 1) //When the left bumper is pushed, move motor A backwards
 {
 motor(motorA) = -100;
 }
 else
 {
 motor(motorA) =0;

 }
}
}
